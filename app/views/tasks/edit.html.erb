<h1>Edit Task</h1>
<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>
<div>
  <input type="checkbox" id="completed" name= "completed" >
  <label for="completed" >Completed</label>
</div>

<div class="backbtn"><%= link_to "Back to list", tasks_path %></div>
